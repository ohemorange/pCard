<div class="page-header jumbotron subhead"><h1>Preview</h1></div>
<p id="notice"><%= notice %></p>

<%= render 'form_preview' %>

<p>This card will be sent to <%= @card.recipient %>.</p>
<%= button_to "Send!", sent_card_path(@card), :method => :get, :class => "btn btn-success btn-large" %>
<%= button_to 'Edit', edit_card_path(@card), :method => :get, :class => "btn" %>
<%= button_to "View Without Sending", @card, :method => :get, :class => "btn", :confirm => "Your card will not be sent. Are you sure you want to continue?" %>