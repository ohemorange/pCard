<h1>Listing cards</h1>

<table>
  <tr>
    <th>From</th>
    <th>To</th>
    <th>Message</th>
    <th>Bg</th>
    <th>Design</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%= card.from %></td>
    <td><%= card.to %></td>
    <td><%= card.message %></td>
    <td><%= card.bg %></td>
    <td><%= card.design %></td>
    <td><%= link_to 'Show', card %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Destroy', card, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<% @backgrounds.each do |background| %>
  <tr>
    <td><%= background.file %></td>
    <td><%= link_to 'Show', background %></td>
    <td><%= link_to 'Edit', edit_background_path(background) %></td>
    <td><%= link_to 'Destroy', background, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

