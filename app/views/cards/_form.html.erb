<%= form_for(@card) do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% @card.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="carousel">
    <div class="field carousel-inner">
      <%= f.label :from %><br />
      <%= f.text_field :from %>
    </div>
    <div class="field carousel-inner">
      <%= f.label :to %><br />
      <%= f.text_field :to %>
    </div>
    <div class="field carousel-inner">
      <%= f.label :message %><br />
      <%= f.text_area :message %>
    </div>
    <div class="field carousel-inner">
      <%= f.label :bg %><br />
      <table>
      <tr>
      <% @backgrounds.each do |background| %>
        <td><img class="preview" src="<%= background.file %>"/></td>
      <% end %>
      </tr>
      </table>
      <%= f.hidden_field :bg %>
    </div>
    <div class="field carousel-inner">
      <%= f.label :design %><br />
      <table>
      <tr>
      <% @designs.each do |design| %>
        <td><img class="preview" src="<%= design.file %>"/></td>
      <% end %>
      </tr>
      </table>
      <%= f.hidden_field :design %>
    </div>
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
