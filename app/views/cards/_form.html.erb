<%= form_for(@card) do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% @card.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class ="row">
    <div class="span6">
    <div class="page-header"><h2>Information</h2></div>
      <div class="field">
        <%= f.label :from %>
        <%= f.text_field :from, :class => "span4" %>
      </div>
      <div class="field">
        <%= f.label :to %>
        <%= f.text_field :to, :class => "span4" %>
      </div>
      <div class="field">
        <%= f.label "recipient email address" %> 
        <%= f.text_field :recipient, :class => "span4" %>
      </div>
    </div>
    <div class="span6">
      <div class="page-header"><h2>Message</h2></div>
      <div class="field">
        <%= f.text_area :message, :class => "span6 message" %>
      </div>
    </div>
  </div>
  <div class="row">
  <div class="span12">
  <div class="page-header"><h2>Princeton Image</h2></div>
  <div class="field">
    <ul class="thumbnails">

    <% @backgrounds.each do |background| %>
      <li class="span3">
        <label class = "radio">
          <center>
            <div class="thumbnail selectable">
              <%= image_tag(background.file, :class => "preview") %>
              <%= f.radio_button(:bg, background.file) %>
            </div>
          </center>
        </label>
      </li>
    <% end %>

    </ul>
  </div>
  </div>
  </div>
  <div class="row">
  <div class="span12">
  <div class="page-header"><h2>Layout</h2></div>
  <div class="field">
    <ul class="thumbnails">
    <% @designs.each do |design| %>
      <li class="span3">
        <label class = "radio">
          <center>
            <div class="thumbnail selectable">
              <%= image_tag(design.file, :class => "preview") %>
              <%= f.radio_button(:design, design.file) %>
            </div>
          </center>
        </label>
      </li>
    <% end %>
    </ul>
  </div>
  </div>
  </div>

    <%= f.submit "Preview", :type => "submit", :class => "btn btn-primary btn-large" %>
<% end %>