<%= form_for(@card) do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% @card.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class ="row">
    <div class="span6">
      <div class="field">
        <%= f.label :from %>
        <%= f.text_field :from, :class => "span4" %>
      </div>
      <div class="field">
        <%= f.label :to %>
        <%= f.text_field :to, :class => "span4" %>
      </div>
      <div class="field">
        <%= f.label "recipient email address" %> 
        <%= f.text_field :recipient, :class => "span4" %>
      </div>
    </div>
    <div class="span6">
      <div class="field">
        <%= f.label :message %>
        <%= f.text_area :message, :class => "span6" %>
      </div>
    </div>
  </div>
  <div class="row">
  <div class="span12">
  <div class="field">
    <%= f.label "background image" %>
    <ul class="thumbnails">
    <% @backgrounds.each do |background| %>
      <li class="span3">
        <div class="thumbnail">
          <label class = "radio">
            <%= image_tag(background.file, :class => "preview") %>
            <%= f.radio_button(:bg, background.file) %>
          </label>
        </div>
      </li>
    <% end %>
    </ul>
  </div>
  </div>
  </div>
  <div class="row">
  <div class="span12">
  <div class="field">
    <%= f.label :design %>
    <ul class="thumbnails">
    <% @designs.each do |design| %>
      <li class="span3">
        <div class="thumbnail">
          <label class = "radio">
            <%= image_tag(design.file, :class => "preview") %>
            <%= f.radio_button(:design, design.file) %>
          </label>
        </div>
      </li>
    <% end %>
    </ul>
  </div>
  </div>
  </div>

    <%= f.submit "Preview", :type => "submit", :class => "btn btn-primary" %>
<% end %>