<!DOCTYPE html>
<html>
<head>
  <title>pCards</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script type='text/javascript'>
      $(document).ready(function() {
          $('.input :radio').focus(updateSelectedStyle);
          $('.input :radio').blur(updateSelectedStyle);
          $('.input :radio').change(updateSelectedStyle);
      })

      function updateSelectedStyle() {
          $('label .radio').removeClass('focused').next().removeClass('focused');
          $('label .radio.checked').addClass('focused').next().addClass('focused');
      }
  </script>
</head>
<body>
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
      <%= image_tag("crestclean.png", :alt => "Princeton Crest", :class => "crest brand", :size => "27x30") %>
      <%= link_to "pCards", cards_url, :class => "brand", %>
        <ul class="nav">
          <li>
          <%= link_to "Home", cards_url %>
          </li>
          <li><%= link_to "Create", new_card_path %></li>
          <li><%= link_to "About", :controller => "pages", :action => "about" %></li>
        </ul>
      </div>
    </div>
  </div>
<div class="container">
<%= yield %>
</div>
</body>
</html>
